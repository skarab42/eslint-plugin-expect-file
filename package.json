{
  "name": "eslint-plugin-expect-extensions",
  "version": "0.0.0-development",
  "description": "Scaffolded with @skarab/skaffold",
  "author": {
    "name": "skarab42",
    "email": "skarab@bluewin.ch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skarab42/eslint-plugin-expect-extensions.git"
  },
  "homepage": "https://github.com/skarab42/eslint-plugin-expect-extensions",
  "bugs": "https://github.com/skarab42/eslint-plugin-expect-extensions/issues",
  "funding": "https://github.com/sponsors/skarab42",
  "license": "MIT",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "check": "tsc -p ./tsconfig.check.json",
    "lint": "eslint --max-warnings=0 .",
    "format": "prettier --check .",
    "check-lint-format": "pnpm check && pnpm lint && pnpm format",
    "test": "pnpm check-lint-format && pnpm vitest run --coverage",
    "prepare": "npx simple-git-hooks",
    "release": "semantic-release --branches main"
  },
  "devDependencies": {
    "@skarab/eslint-config": "^2.0.0",
    "@skarab/prettier-config": "^1.2.2",
    "@skarab/typescript-config": "^1.3.1",
    "@types/node": "^18.7.18",
    "@vitest/coverage-c8": "^0.23.4",
    "eslint": "^8.23.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.8.3",
    "vite-plugin-vitest-typescript-assert": "^1.1.4",
    "vitest": "^0.23.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.11.0",
  "keywords": []
}
