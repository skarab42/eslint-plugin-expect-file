{
  "root": true,
  "extends": ["@skarab/eslint-config"],
  "plugins": ["expect-file"],
  "rules": {
    "unicorn/prefer-module": "off",
    "expect-file/name-to-match-extension": [
      "warn",
      {
        "./source/**": [".ts"],
        "./test/**": [".test.ts"]
      }
    ],
    "expect-file/path-to-match-pattern": [
      "warn",
      {
        "./source/**": ["**/*.ts"],
        "./test/**": ["**/*.test.ts"]
      }
    ]
  }
}
